<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Theme.AppCompat.Light.Dialog.Alert-->
    <style name="MyDatepickerTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@color/g</item>
        <item name="colorControlActivated"><!--@color/g-->@android:color/white</item>
        <item name="textColorAlertDialogListItem">@color/g<!--@android:color/white--></item>
        <item name="colorAccent">@color/g</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textColorPrimary"><!--@android:color/white-->@android:color/darker_gray</item>
        <item name="android:windowBackground">@drawable/datepicker_drawable</item>
    </style>
    <style name="MyConfirmDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--item RadioButton or CheckBox color-->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/g</item>
        <!--item text color-->
        <item name="textColorAlertDialogListItem">@android:color/white</item>
        <!--buttons color-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/confirmdlg_bg</item>
    </style>
</resources>
